  <%= turbo_frame_tag 'multiple_open_answers' do %>
    <div class="flex flex-col">
      <%= form_tag multiple_open_block_multiple_open_answers_path(@multiple_open_block), method: 'post'  do  %>

        
        <% @multiple_open_answers.each_with_index do |answer, i| %>
          <div>
           
            <% hidden_field :multiple_open_piece, name: "#{i}", :value => "#{answer.multiple_open_piece_id}" %> 
            <%= @multiple_open_pieces[i].get_hidden_field.first %> 
            <% text_field_tag :answer, answer.answer, name: "answer[#{answer.multiple_open_piece_id}]" %>
            
            
            <% hidden_field :answer, :multiple_open_piece => answer.multiple_open_piece_id %> 
            <%= hidden_field_tag "answers[#{i}][multiple_open_piece]", answer.multiple_open_piece_id %> 
            <%= text_field_tag :answer, answer.answer, name: "answers[#{i}][answer]" %>
            <%= @multiple_open_pieces[i].get_hidden_field.last %> 
          </div>
        <% end %>
        <div>
          <%= submit_tag 'Save' %>    
        </div> 
      <% end %>


    </div>
  <% end %>
