<div>
    <% if current_user.admin? %>
            <%= render 'lessons/admin/lesson_header' %>
            <%= render 'lessons/admin/lesson_groups', lesson_groups: @lesson_groups %>
            <div class="container pb-8">
                <%= link_to '< All lessons', course_path(@lesson.course), class: "btn btn-2" %>
            </div>
    <% else %>
      <div class="relative left-0 transition-all" data-controller="navigation">
        <%= render partial: 'lessons/navigation', locals: { lesson: @lesson } %>
        <%= render partial: 'lessons/lesson_header',
            locals: 
                { lesson: @lesson,
                study_session: current_user.study_session
                } 
        %>
        <%= turbo_frame_tag "lesson_group_frame", src: "/lesson_groups/#{@lesson.lesson_groups.first.id}" %>

      </div>
    <% end %>
</div>
