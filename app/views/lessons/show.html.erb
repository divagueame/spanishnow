<%= render @lesson %>

<% if current_user.admin? %>
  <div>
    <%= link_to new_rich_block_path(lesson_id: @lesson.id), class:"px-5" do %>
      <%= image_tag "lesson_blocks/RichBlock", class: "inline-block w-8 h-8" %>
      New Rich
    <% end %>
    <%= link_to new_user_text_block_path(lesson_id: @lesson.id) do %>
      <%= image_tag "lesson_blocks/UserTextBlock", class: "inline-block w-8 h-8" %>
      New User Text
    <% end %>
    <%= link_to new_multiple_open_block_path(lesson_id: @lesson.id) do %>
      <%= image_tag "lesson_blocks/MultipleOpenBlock", class: "inline-block w-8 h-8" %>
      New Multiple Open
    <% end %>

    <%= link_to "Edit this lesson", edit_lesson_path(@lesson) if current_user.admin? %> |
    <%= link_to "Back to lessons", lessons_path %>

    <%= button_to "Destroy this lesson", @lesson, method: :delete if current_user.admin? %>
  </div>
<% end %>