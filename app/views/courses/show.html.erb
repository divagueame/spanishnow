<%= render @course %>

<br>

<%# Lessons  %>
<div id="lessons" class="container">
  <% @course.lessons.each do |lesson| %>
    <% if current_user.admin? %>
      <%= link_to toggle_active_lesson_path(lesson), data: { 'turbo-method' => :post} do %>
            <% if lesson.active %>
              <%= image_tag 'icons/active-bg', class: "inline h-4 w-4" %>
            <% else %>
              <%= image_tag 'icons/inactive-bg', class: "inline h-4 w-4" %>
            <% end %>
      <% end %>        
    <% end %>       
    <%= link_to lesson.title, lesson_path(lesson) %>
     <br>
<% end %>
      
</div>
