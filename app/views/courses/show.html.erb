
<%= render @course %>

<br>

<%# Lessons  %>
<div id="lessons" class="container mb-10">
  <% @course.lessons.each do |lesson| %>
    <% if current_user.admin? %>
      <%= render 'lessons/draggable', lesson: lesson %>
    <% else %>
    <% next unless lesson.active %>
      <div class="my-1 p-2">
        <%= link_to lesson.title, lesson_path(lesson) %>
      </div>
    <% end %>
  <% end %>
</div>

<div class="container">
  <%= link_to 'Add lesson to course', new_lesson_path(course_id: @course), class: "btn" %>
</div>

