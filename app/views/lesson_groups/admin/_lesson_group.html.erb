<%# Lesson Group %>
<div id="<%= dom_id lesson_group %>">
  <h1 class="text-center my-5"><%= lesson_group.position %>: <%= lesson_group.title %></h1>
  <p class="my-5">
    <%= lesson_group.description %>
  </p>
</div>
<%# Blocks %>
<div>
  <% @lesson_group.lesson_blocks.each do |block| %>
    <%= render 'lesson_blocks/draggable', lesson_block: block  %>
  <% end %>
</div>
<%= render partial: 'lesson_groups/admin/add_blocks', locals: {lesson_group: lesson_group} %>
<%= link_to '< Lesson', lesson_path(lesson_group.lesson_id), class: "btn btn-2" %>
