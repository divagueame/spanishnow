<div class="w-1/3 mx-auto flex flex-col gap-2 items-center">
  <h2 class="pb-4">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "pl-8 hidden" %>
      <%= f.email_field :email, placeholder: :email, autofocus: true, autocomplete: "email", class: "pl-8 rounded-full" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "pl-8 hidden" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "pl-8 rounded-full", placeholder: :password %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-4">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "basic" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
