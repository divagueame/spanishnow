<div class="w-1/3 mx-auto flex flex-col gap-2 items-center">
<h2 class="pb-4">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-4">
    <%= f.label :email, class: "pl-8 hidden" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "pl-8 rounded-full" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "pl-8 hidden" %>
    <div>
    <% if @minimum_password_length %>
    (<%= @minimum_password_length %> characters minimum)
    <% end %>

    </div>
    <%= f.password_field :password, autocomplete: "new-password", class: "pl-8 rounded-full" %>
  </div>

  <div class="mb-4">
    <%= f.label :password_confirmation , class: "pl-8 hidden" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "pl-8 rounded-full" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
