<%= form_with(model: youtube_block, class: "contents") do |form| %>
  <% if youtube_block.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(youtube_block.errors.count, "error") %> prohibited this youtube_block from being saved:</h2>

      <ul>
        <% youtube_block.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

   <div>
    <%= form.fields_for :lesson_block do |lesson_block_form| %> 
        <%= lesson_block_form.label :title %>
        <%= lesson_block_form.text_field :title %> 
        <%= lesson_block_form.hidden_field :lesson_group_id, value: @lesson_group_id %>
      <% end %>
  </div>

  <div class="my-5">
    <%= form.label :url %>
    <%= form.text_field :url, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :code %>
    <%= form.text_area :code, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
