<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <div class="p-4 rounded-sm bg-orange-200 my-4 shadow-sm">
      <h3><%= @feedback.user_text_answer.title %></h3>
      <p><%= @feedback.user_text_answer.body %></p>
      <%= link_to 'Go back to lesson', lesson_path(@feedback.user_text_answer.user_text_block.lesson) %>
    </div>
   
    <%= render @feedback %>

  <% if current_user.admin? %>
    <%= link_to 'Edit this feedback', edit_feedback_path(@feedback), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this feedback', feedback_path(@feedback), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to feedbacks', feedbacks_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <% end %>
  </div>
</div>
