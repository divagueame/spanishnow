<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product %>
  </p>

  <p>
    <strong>Sales:</strong>
    <%= product.sales_count %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= number_to_euro  (product.price/100) %>
  </p>

  <p>
    <strong>Payment:</strong>
    <%= button_to "Buy now!", checkout_create_path, params: {id: product.id}, remote: true, data: {turbo: false}%>
  </p>

</div>
