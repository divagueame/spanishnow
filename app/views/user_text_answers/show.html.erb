<%= turbo_frame_tag "lesson_group_frame" do %>

  <div class="mx-auto md:w-2/3 w-full flex">
    <div class="mx-auto">
      <% if notice.present? %>
        <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
      <% end %>

      <%= render @user_text_answer %>
        <%= link_to '< Back to lesson group', lesson_group_path(@user_text_answer.user_text_block.lesson_group), class: "btn btn-back" %>
    </div>
  </div>
<% end %>