<div id="<%= dom_id user_text_answer %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= user_text_answer.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Body:</strong>
    <%= user_text_answer.body %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= user_text_answer.user_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this user text answer", user_text_answer, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this user text answer', edit_user_text_answer_path(user_text_answer), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
